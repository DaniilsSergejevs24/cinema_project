<Window x:Class="cinema_project.MyTickets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Tickets" Height="800" Width="500" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <DockPanel Background="#eaf6ff">

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Background="#0077cc" Height="60">
            <Button Content="🎥" ToolTip="Cinema Main Page" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="CinemaMain_Click"/>
            <Button Content="📅" ToolTip="Movie Session Calendar" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MovieSessionCalendar_Click"/>
            <Button Content="🔍" ToolTip="Search Page" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="SearchPage_Click"/>
            <Button Content="💾" ToolTip="My Tickets" Background="#005fa3" Foreground="White" Width="100" FontSize="24"/>
            <Button Content="👤" ToolTip="My Profile" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MyProfile_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="My Tickets" FontSize="28" FontWeight="Bold" Foreground="#0077cc" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <StackPanel Name="NoTicketsPanel" HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="No tickets? Buy some!" FontSize="20" FontWeight="SemiBold" 
                              Foreground="#666" HorizontalAlignment="Center" Margin="0,50,0,20"/>
                    <Button Name="FindMovieButton" Content="Find a Movie" Background="#0077cc" Foreground="White" 
                           Padding="15,10" FontSize="16" Click="FindMovie_Click"/>
                </StackPanel>

                <ScrollViewer Name="TicketsScrollViewer" Height="600" VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="TicketsPanel">
                    </StackPanel>
                </ScrollViewer>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>