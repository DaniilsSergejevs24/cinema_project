<Window x:Class="cinema_project.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="650" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="#F0F0F0" CornerRadius="10" Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Create Account" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <TextBlock Text="Username *" Margin="0,0,0,5"/>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5">
                        <TextBox x:Name="UsernameTextBox" Height="30" Padding="5" BorderThickness="0" TextChanged="UsernameTextBox_TextChanged"/>
                    </Border>

                    <TextBlock Text="First Name *" Margin="0,15,0,5"/>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5">
                        <TextBox x:Name="FirstNameTextBox" Height="30" Padding="5" BorderThickness="0" TextChanged="FirstNameTextBox_TextChanged"/>
                    </Border>

                    <TextBlock Text="Last Name *" Margin="0,15,0,5"/>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5">
                        <TextBox x:Name="LastNameTextBox" Height="30" Padding="5" BorderThickness="0" TextChanged="LastNameTextBox_TextChanged"/>
                    </Border>

                    <TextBlock Text="Email *" Margin="0,15,0,5"/>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5">
                        <TextBox x:Name="EmailTextBox" Height="30" Padding="5" BorderThickness="0" TextChanged="EmailTextBox_TextChanged"/>
                    </Border>

                    <TextBlock Text="Phone Number" Margin="0,15,0,5"/>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5">
                        <TextBox x:Name="PhoneTextBox" Height="30" Padding="5" BorderThickness="0" TextChanged="PhoneTextBox_TextChanged"/>
                    </Border>

                    <TextBlock Text="Password *" Margin="0,15,0,5"/>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5">
                        <PasswordBox x:Name="PasswordBox" Height="30" Padding="5" BorderThickness="0" PasswordChanged="PasswordBox_PasswordChanged"/>
                    </Border>

                    <TextBlock Text="Confirm Password *" Margin="0,15,0,5"/>
                    <Border BorderBrush="#AAAAAA" BorderThickness="1" CornerRadius="5">
                        <PasswordBox x:Name="ConfirmPasswordBox" Height="30" Padding="5" BorderThickness="0" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                    </Border>

                    <TextBlock Text="Password must be at least 6 characters long" 
                               FontSize="10" Foreground="Gray" Margin="0,5,0,15"/>

                    <CheckBox x:Name="TermsCheckBox" Margin="0,0,0,20">
                        <TextBlock TextWrapping="Wrap">
                            I agree to the <Hyperlink>Terms and Conditions</Hyperlink> and <Hyperlink>Privacy Policy</Hyperlink>
                        </TextBlock>
                    </CheckBox>

                    <Button x:Name="RegisterButton" Content="Create Account" Height="40" Background="#27ae60" 
                            Foreground="White" BorderThickness="0" Click="RegisterButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button x:Name="CancelButton" Content="Cancel" Height="35" Background="Transparent" 
                            Foreground="#666666" BorderBrush="#AAAAAA" BorderThickness="1" 
                            Click="CancelButton_Click" Margin="0,10,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <TextBlock x:Name="StatusMessage" Margin="0,15,0,0" HorizontalAlignment="Center" 
                               Foreground="Red" TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>