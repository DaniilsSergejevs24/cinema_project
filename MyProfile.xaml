<Window x:Class="cinema_project.MyProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Profile" Height="800" Width="500" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <DockPanel Background="#eaf6ff">

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Background="#0077cc" Height="60">
            <Button Content="🎥" ToolTip="Cinema Main Page" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="CinemaMain_Click"/>
            <Button Content="📅" ToolTip="Movie Session Calendar" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MovieSessionCalendar_Click"/>
            <Button Content="🔍" ToolTip="Search Page" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="SearchPage_Click"/>
            <Button Content="💾" ToolTip="My Tickets" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MyTickets_Click"/>
            <Button Content="👤" ToolTip="My Profile" Background="#005fa3" Foreground="White" Width="100" FontSize="24"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="My Profile" FontSize="28" FontWeight="Bold" Foreground="#0077cc" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <Border Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="120" Height="120" CornerRadius="0" BorderBrush="#0077cc" BorderThickness="3" Margin="0,0,0,10">
                            <Image Name="ProfileImage" Stretch="Fill" Source="Images/default_avatar.png"/>
                        </Border>
                        <Button Name="ChangePhotoButton" Content="Change Photo" Background="#0077cc" Foreground="White" 
                               Padding="10,5" FontSize="14" Click="ChangePhoto_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="User Information" FontSize="18" FontWeight="Bold" Foreground="#004080" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Username:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Name="UsernameText" Grid.Row="0" Grid.Column="1" Margin="10,5" Foreground="#333"/>

                            <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Name="EmailText" Grid.Row="1" Grid.Column="1" Margin="10,5" Foreground="#333"/>

                            <TextBlock Text="Join Date:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Name="JoinDateText" Grid.Row="2" Grid.Column="1" Margin="10,5" Foreground="#333"/>

                            <TextBlock Text="Total Tickets:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Name="TotalTicketsText" Grid.Row="3" Grid.Column="1" Margin="10,5" Foreground="#0077cc" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Account Settings" FontSize="18" FontWeight="Bold" Foreground="#004080" Margin="0,0,0,15"/>

                        <Button Name="ChangePasswordButton" Content="Change Password" Background="#28a745" Foreground="White" 
                               Padding="10,8" FontSize="14" Margin="0,5" Click="ChangePassword_Click"/>

                        <Button Name="EditProfileButton" Content="Edit Profile Information" Background="#17a2b8" Foreground="White" 
                               Padding="10,8" FontSize="14" Margin="0,5" Click="EditProfile_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="#fff5f5" BorderBrush="#dc3545" BorderThickness="2" CornerRadius="15" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Danger Zone" FontSize="18" FontWeight="Bold" Foreground="#dc3545" Margin="0,0,0,10"/>
                        <TextBlock Text="Once you delete your account, there is no going back. Please be certain." 
                                  FontSize="14" Foreground="#666" TextWrapping="Wrap" Margin="0,0,0,15"/>
                        <Button Name="DeleteAccountButton" Content="Delete Account" Background="#dc3545" Foreground="White" 
                               Padding="10,8" FontSize="14" Click="DeleteAccount_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>