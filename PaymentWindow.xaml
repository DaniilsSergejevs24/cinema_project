<Window x:Class="cinema_project.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Details" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="Payment Details" 
                          FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Complete your booking" 
                          FontSize="14" Foreground="#BDC3C7" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">

                <Border Background="White" BorderBrush="#E9ECEF" BorderThickness="1" 
                       CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Booking Summary" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Movie:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="MovieTitleText" Text="Movie Title" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Theater:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TheaterText" Text="Theater Name" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Date and Time:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DateTimeText" Text="Date Time" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Seats:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="SeatsText" Text="Selected Seats" Margin="0,0,0,5"/>

                            <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="0,10"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Total Amount:" FontWeight="Bold" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TotalAmountText" Text="$0.00" FontWeight="Bold" FontSize="16" Foreground="#E74C3C"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#E9ECEF" BorderThickness="1" 
                       CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Payment Information" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                        <TextBlock Text="Card Number *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="CardNumberTextBox" Height="35" Padding="10,8" FontSize="14"
                                BorderBrush="#DEE2E6" BorderThickness="1" Margin="0,0,0,15"
                                MaxLength="19" TextChanged="CardNumber_TextChanged"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Expiry Date *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="ExpiryDateTextBox" Height="35" Padding="10,8" FontSize="14"
                                        BorderBrush="#DEE2E6" BorderThickness="1"
                                        MaxLength="5" TextChanged="ExpiryDate_TextChanged"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="CVV *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="CVVTextBox" Height="35" Padding="10,8" FontSize="14"
                                        BorderBrush="#DEE2E6" BorderThickness="1"
                                        MaxLength="4"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Cardholder Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="CardholderNameTextBox" Height="35" Padding="10,8" FontSize="14"
                                BorderBrush="#DEE2E6" BorderThickness="1" Margin="0,0,0,15"/>

                        <TextBlock Text="Billing Address" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="BillingAddressTextBox" Height="35" Padding="10,8" FontSize="14"
                                BorderBrush="#DEE2E6" BorderThickness="1" Margin="0,0,0,15"/>

                        <TextBlock Text="Email for Receipt *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" Height="35" Padding="10,8" FontSize="14"
                                BorderBrush="#DEE2E6" BorderThickness="1" Margin="0,0,0,20"/>

                        <CheckBox x:Name="TermsCheckBox" Content="I agree to the terms and conditions" 
                                 FontSize="12" Margin="0,0,0,10"/>

                        <TextBlock x:Name="PaymentStatusText" Text="" FontSize="12" 
                                  Foreground="#E74C3C" Margin="0,0,0,10" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="White" BorderBrush="#E9ECEF" BorderThickness="0,1,0,0" Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Name="CancelButton" Content="Cancel" 
                       Width="100" Height="40" Margin="0,0,15,0"
                       Background="#6C757D" Foreground="White" FontSize="14"
                       Click="Cancel_Click"/>

                <Button Grid.Column="2" Name="PayButton" Content="Pay Now" 
                       Width="120" Height="40"
                       Background="#28A745" Foreground="White" FontSize="14" FontWeight="SemiBold"
                       Click="Pay_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>