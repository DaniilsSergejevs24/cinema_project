<Window x:Class="cinema_project.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Your Seats" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock x:Name="MovieTitleText" Text="Movie Title" 
                          FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="ShowDetailsText" Text="Theater - Date - Time" 
                          FontSize="14" Foreground="#BDC3C7" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <Border Background="#34495E" CornerRadius="5" Margin="0,0,0,30" Height="30">
                    <TextBlock Text="SCREEN" FontSize="16" FontWeight="Bold" 
                              Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <Grid x:Name="SeatMapGrid" HorizontalAlignment="Center">
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="White" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel>
                <TextBlock Text="Seat Classes and Legend" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <WrapPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                        <Rectangle Width="20" Height="20" Fill="#E74C3C" Margin="0,0,5,0"/>
                        <TextBlock Text="Class A - Premium ($25.00)" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                        <Rectangle Width="20" Height="20" Fill="#3498DB" Margin="0,0,5,0"/>
                        <TextBlock Text="Class B - Standard ($18.00)" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                        <Rectangle Width="20" Height="20" Fill="#2ECC71" Margin="0,0,5,0"/>
                        <TextBlock Text="Class C - Economy ($12.00)" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                        <Rectangle Width="20" Height="20" Fill="#95A5A6" Margin="0,0,5,0"/>
                        <TextBlock Text="Taken" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                        <Rectangle Width="20" Height="20" Fill="#F39C12" Stroke="#D35400" StrokeThickness="2" Margin="0,0,5,0"/>
                        <TextBlock Text="Selected" VerticalAlignment="Center"/>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Background="White" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="SelectedSeatsText" Text="Selected Seats: None" 
                              FontSize="14" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock x:Name="TotalPriceText" Text="Total: $0.00" 
                              FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1" Name="CancelButton" Content="Cancel" 
                       Width="100" Height="35" Margin="0,0,10,0"
                       Background="#95A5A6" Foreground="White" 
                       Click="Cancel_Click"/>

                <Button Grid.Column="2" Name="ProceedButton" Content="Proceed to Payment" 
                       Width="150" Height="35" IsEnabled="False"
                       Background="#27AE60" Foreground="White" 
                       Click="Proceed_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>