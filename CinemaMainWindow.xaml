<Window x:Class="cinema_project.CinemaMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Galaxy Cinema" 
        Height="800" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F5F5F5"
        Loaded="CinemaMainWindow_Loaded">

    <Window.Resources>
        <Style x:Key="ViewDetailsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0077CC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0064B4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Fill" Value="LightGray"/>
            <Setter Property="Margin" Value="3,0"/>
        </Style>
    </Window.Resources>

    <DockPanel Background="#eaf6ff">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Background="#0077cc" Height="60">
            <Button Content="🎥" ToolTip="Cinema Main Page" Background="#005fa3" Foreground="White" Width="100" FontSize="24" Click="CinemaMain_Click"/>
            <Button Content="📅" ToolTip="Movie Session Calendar" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MovieSessionCalendar_Click"/>
            <Button Content="🔍" ToolTip="Search Page" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="SearchPage_Click"/>
            <Button Content="💾" ToolTip="My Tickets" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MyTickets_Click"/>
            <Button Content="👤" ToolTip="My Profile" Background="Transparent" Foreground="White" Width="100" FontSize="24"/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#0077CC" Padding="0,15">
                <TextBlock Text="Galaxy Cinema" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
            </Border>

            <TextBlock x:Name="WelcomeTextBlock" 
                           Grid.Row="1"
                           Text="Welcome, Guest" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="20,15,20,10"
                           HorizontalAlignment="Left"/>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <TextBlock Text="Featured Movie" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>

                    <Border Background="LightBlue" 
                                CornerRadius="15" 
                                Padding="20"
                                Margin="0,0,0,20">
                        <StackPanel HorizontalAlignment="Center">

                            <Image x:Name="FeaturedMovieImage" 
                                       Width="200" 
                                       Height="280" 
                                       Stretch="UniformToFill"
                                       Margin="0,0,0,15"/>

                            <TextBlock x:Name="FeaturedMovieTitle" 
                                           Text="Featured Movie Title"
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>

                            <Button x:Name="FeaturedMovieButton"
                                        Content="View Details" 
                                        Style="{StaticResource ViewDetailsButtonStyle}"
                                        Click="ViewMovieDetails_Click"
                                        Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                <Ellipse x:Name="Indicator1" Style="{StaticResource IndicatorStyle}"/>
                                <Ellipse x:Name="Indicator2" Style="{StaticResource IndicatorStyle}"/>
                                <Ellipse x:Name="Indicator3" Style="{StaticResource IndicatorStyle}"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

        </Grid>
    </DockPanel>
</Window>