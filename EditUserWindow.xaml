<Window x:Class="cinema_project.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User - Admin Panel" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f8f9fa">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#34495e">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="✏️" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="Edit User Information" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="30,20">
            <StackPanel>
                <TextBlock Text="Username:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Name="UsernameTextBox" 
                        Height="35" 
                        FontSize="14" 
                        Padding="10,8" 
                        Margin="0,0,0,15"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        Background="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         Padding="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Email:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Name="EmailTextBox" 
                        Height="35" 
                        FontSize="14" 
                        Padding="10,8" 
                        Margin="0,0,0,15"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        Background="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         Padding="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="First Name:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Name="FirstNameTextBox" 
                        Height="35" 
                        FontSize="14" 
                        Padding="10,8" 
                        Margin="0,0,0,15"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        Background="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         Padding="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Last Name:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Name="LastNameTextBox" 
                        Height="35" 
                        FontSize="14" 
                        Padding="10,8" 
                        Margin="0,0,0,15"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        Background="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         Padding="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Phone:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Name="PhoneTextBox" 
                        Height="35" 
                        FontSize="14" 
                        Padding="10,8" 
                        Margin="0,0,0,15"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        Background="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         Padding="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Date of Birth:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker Name="DateOfBirthPicker" 
                           Height="35" 
                           FontSize="14" 
                           Margin="0,0,0,15"
                           BorderBrush="#bdc3c7"
                           BorderThickness="1"
                           Background="White"/>

                <CheckBox Name="IsActiveCheckBox" 
                         Content="User is Active" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Margin="0,10,0,15"/>

                <TextBlock Name="StatusMessage" 
                          Text="" 
                          FontSize="12" 
                          TextAlignment="Center" 
                          TextWrapping="Wrap"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>


        <Border Grid.Row="2" Background="#ecf0f1" BorderBrush="#bdc3c7" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">

                <Button Name="SaveButton"
                       Content="💾 Save Changes"
                       Width="130"
                       Height="40"
                       Margin="0,0,15,0"
                       Background="#27ae60"
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="Bold"
                       Click="SaveButton_Click"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#229954"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#95a5a6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="CancelButton"
                       Content="❌ Cancel"
                       Width="100"
                       Height="40"
                       Background="#95a5a6"
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="Bold"
                       Click="CancelButton_Click"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#7f8c8d"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>