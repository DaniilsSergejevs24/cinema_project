<Window x:Class="cinema_project.SearchPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Movies" Height="800" Width="500" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <DockPanel Background="#eaf6ff">

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Background="#0077cc" Height="60">
            <Button Content="🎥" ToolTip="Cinema Main Page" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="CinemaMain_Click"/>
            <Button Content="📅" ToolTip="Movie Session Calendar" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MovieSessionCalendar_Click"/>
            <Button Content="🔍" ToolTip="Search Page" Background="#005fa3" Foreground="White" Width="100" FontSize="24"/>
            <Button Content="💾" ToolTip="My Tickets" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MyTickets_Click"/>
            <Button Content="👤" ToolTip="My Profile" Background="Transparent" Foreground="White" Width="100" FontSize="24" Click="MyProfile_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Search Movies" FontSize="28" FontWeight="Bold" Foreground="#0077cc" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <TextBlock Text="Movie Status" FontSize="16" FontWeight="SemiBold" Foreground="#004080" Margin="0,0,0,5"/>
                <ComboBox Name="StatusComboBox" Margin="0,0,0,15" SelectionChanged="StatusComboBox_SelectionChanged">
                    <ComboBoxItem Content="Now In Cinema" IsSelected="True"/>
                    <ComboBoxItem Content="In Cinema Soon"/>
                </ComboBox>

                <TextBlock Text="Genres" FontSize="16" FontWeight="SemiBold" Foreground="#004080" Margin="0,0,0,5"/>
                <ComboBox Name="StatusComboBox2" Margin="0,0,0,15" SelectionChanged="StatusComboBox_SelectionChanged">
                    <ComboBoxItem Content="Action" IsSelected="True"/>
                    <ComboBoxItem Content="Romance"/>
                    <ComboBoxItem Content="Drama"/>
                    <ComboBoxItem Content="Sci-Fi"/>
                    <ComboBoxItem Content="Thriller"/>
                    <ComboBoxItem Content="Comedy"/>
                    <ComboBoxItem Content="Horror"/>
                    <ComboBoxItem Content="Adventure"/>
                    <ComboBoxItem Content="Crime"/>
                    <ComboBoxItem Content="Fantasy"/>
                </ComboBox>


                <Button Name="SearchButton" Content="Search Movies" Background="#0077cc" Foreground="White" 
                       Padding="10,5" FontSize="16" HorizontalAlignment="Center" Click="SearchButton_Click" Margin="0,0,0,20"/>

                <ScrollViewer Name="MoviesScrollViewer" Height="400" VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="MoviesPanel">
                    </StackPanel>
                </ScrollViewer>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>