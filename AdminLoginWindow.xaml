<Window x:Class="cinema_project.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login - Cinema Management System" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f0f0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="287*"/>
            <ColumnDefinition Width="213*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" CornerRadius="5,5,0,0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🛡️" FontSize="28" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="Administrator Access" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" Padding="40" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Admin ID:" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5" 
                          Foreground="#34495e"/>

                <TextBox Name="AdminIdTextBox" 
                        Height="35" 
                        FontSize="14" 
                        Padding="10,8" 
                        Margin="0,0,0,20"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        Background="#ecf0f1"
                        TextChanged="AdminIdTextBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         Padding="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Authentication Key:" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5" 
                          Foreground="#34495e"/>

                <PasswordBox Name="AuthKeyPasswordBox" 
                            Height="35" 
                            FontSize="14" 
                            Padding="10,8" 
                            Margin="0,0,0,20"
                            BorderBrush="#bdc3c7"
                            BorderThickness="1"
                            Background="#ecf0f1"
                            PasswordChanged="AuthKeyPasswordBox_PasswordChanged">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="4">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         Padding="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <Button Name="AdminLoginButton"
                       Content="Access Admin Panel"
                       Height="40"
                       FontSize="14"
                       FontWeight="Bold"
                       Background="#e74c3c"
                       Foreground="White"
                       BorderThickness="0"
                       Margin="0,10,0,20"
                       Click="AdminLoginButton_Click"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5" 
                                               BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#c0392b"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#a93226"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#95a5a6"/>
                                                <Setter Property="Foreground" Value="#7f8c8d"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Name="StatusMessage" 
                          Text="" 
                          FontSize="12" 
                          TextAlignment="Center" 
                          TextWrapping="Wrap"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#34495e" CornerRadius="0,0,5,5" Grid.ColumnSpan="2" Margin="0,294,0,0" Grid.RowSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⚠️ Authorized Personnel Only" 
                          FontSize="12" 
                          Foreground="#ecf0f1" 
                          FontStyle="Italic"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>