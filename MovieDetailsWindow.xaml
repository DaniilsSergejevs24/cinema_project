<Window x:Class="cinema_project.MovieDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Details" Height="700" Width="600" 
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#eaf6ff">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0077cc" Padding="20,15">
            <StackPanel>
                <TextBlock x:Name="MovieTitleHeader" 
                           Text="Movie Title" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="MovieGenre" 
                           Text="Genre - Duration - Rating" 
                           FontSize="14" 
                           Foreground="LightBlue" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="10" 
                            Padding="5" 
                            VerticalAlignment="Top">
                        <Image x:Name="MoviePosterImage" 
                               Width="180" 
                               Height="270" 
                               Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Director" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#004080" 
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="MovieDirector" 
                                   Text="Director Name" 
                                   FontSize="16" 
                                   Foreground="#333" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Release Date" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#004080" 
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="MovieReleaseDate" 
                                   Text="Release Date" 
                                   FontSize="16" 
                                   Foreground="#333" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Rating" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#004080" 
                                   Margin="0,0,0,5"/>
                        <Border Background="#0077cc" 
                                CornerRadius="15" 
                                HorizontalAlignment="Left" 
                                Padding="12,6">
                            <TextBlock x:Name="MovieRating" 
                                       Text="PG-13" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="Book Tickets" 
                                    Background="#28a745" 
                                    Foreground="White" 
                                    FontSize="14" 
                                    FontWeight="SemiBold"
                                    Padding="15,8" 
                                    Margin="0,0,10,0"
                                    Style="{StaticResource RoundedButton}"
                                    Click="BookTickets_Click"/>
                            <Button Content="Add to Wishlist" 
                                    Background="#ffc107" 
                                    Foreground="#333" 
                                    FontSize="14" 
                                    FontWeight="SemiBold"
                                    Padding="15,8"
                                    Style="{StaticResource RoundedButton}"
                                    Click="AddToWishlist_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderBrush="#ddd" 
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Synopsis" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#004080" 
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="MovieDescription" 
                                   Text="Movie description will appear here..." 
                                   FontSize="14" 
                                   Foreground="#333"
                                   TextWrapping="Wrap" 
                                   LineHeight="22"/>
                    </StackPanel>
                </Border>

                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        BorderBrush="#ddd" 
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Show Times Today" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#004080" 
                                   Margin="0,0,0,15"/>

                        <WrapPanel x:Name="ShowTimesPanel" Margin="0,0,0,10">
                            <Button Content="14:30" 
                                    Background="#0077cc" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    Margin="0,0,10,5"
                                    Style="{StaticResource RoundedButton}"
                                    Click="SelectShowTime_Click"/>
                            <Button Content="17:15" 
                                    Background="#0077cc" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    Margin="0,0,10,5"
                                    Style="{StaticResource RoundedButton}"
                                    Click="SelectShowTime_Click"/>
                            <Button Content="20:00" 
                                    Background="#0077cc" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    Margin="0,0,10,5"
                                    Style="{StaticResource RoundedButton}"
                                    Click="SelectShowTime_Click"/>
                            <Button Content="22:45" 
                                    Background="#0077cc" 
                                    Foreground="White" 
                                    Padding="12,6"
                                    Margin="0,0,10,5"
                                    Style="{StaticResource RoundedButton}"
                                    Click="SelectShowTime_Click"/>
                        </WrapPanel>

                        <TextBlock Text="- Click on a time to book tickets for that show" 
                                   FontSize="12" 
                                   Foreground="#666" 
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#f8f9fa" Padding="20,15" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Share Movie" 
                        Background="Transparent" 
                        Foreground="#0077cc" 
                        FontSize="14" 
                        Padding="15,8" 
                        Margin="0,0,10,0"
                        BorderBrush="#0077cc"
                        BorderThickness="1"
                        Style="{StaticResource RoundedButton}"
                        Click="ShareMovie_Click"/>
                <Button Content="Close" 
                        Background="#6c757d" 
                        Foreground="White" 
                        FontSize="14" 
                        Padding="20,8"
                        Style="{StaticResource RoundedButton}"
                        Click="Close_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>